{
  "name": "focus-fog",
  "displayName": "Focus Fog",
  "description": "Dim code outside your current scope to focus on what matters.",
  "version": "0.0.1",
  "publisher": "MdShahAmanPatwary",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusFog.toggle",
        "title": "Focus Fog: Toggle"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Fog",
      "properties": {
        "focusFog.opacity": {
          "type": "number",
          "default": 0.3,
          "description": "Opacity of the dimmed text (0.0 to 1.0). Lower is more transparent."
        },
        "focusFog.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Focus Fog."
        },
        "focusFog.delay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before updating the fog after cursor movement."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}